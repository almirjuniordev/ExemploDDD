    {
        foreach (var menu in Model.menus.OrderBy(x => x.nome))
        {
            if (menu.subMenu.Count() > 0)
            {
                <li class="treeview">
                    <a>
                        <i class="@menu.icone"></i> <span>@Html.DisplayFor(modelItem => menu.nome)</span>
